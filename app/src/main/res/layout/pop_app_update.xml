<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/popup_call_contact_long_click_relat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_pop"
        android:layout_marginRight="@dimen/space_25"
        android:layout_marginLeft="@dimen/space_25">


        <RelativeLayout
            android:id="@+id/popup_app_update_top"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:singleLine="true"
                android:text="@string/app_update_title"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/popup_app_update_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popup_app_update_top"
            android:background="@color/base_page"
            >

             <TextView
                 android:id="@+id/popup_update_version"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:padding="@dimen/space_20"
                 android:textSize="@dimen/text_medium"
                 android:singleLine="true"
                 android:ellipsize="end"
                 android:text="@string/app_update_version"
                 />

            <TextView
                android:id="@+id/popup_update_content"
                android:layout_below="@+id/popup_update_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_20"
                android:textSize="@dimen/text_medium"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="@string/app_update_info"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@+id/popup_app_update_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/popup_update_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="center"
                android:background="@null"
                android:textColor="@color/line_color"
                android:textSize="@dimen/text_large"
                android:text="@string/app_update_cancle" />


            <TextView
                android:id="@+id/popup_update_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="center"
                android:background="@null"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large"
                android:text="@string/app_update_ok"
                 />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>