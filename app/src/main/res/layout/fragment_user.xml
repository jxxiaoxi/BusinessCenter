<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:text="@string/user_center"
        android:textSize="@dimen/ts_22" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_user_info"
        android:layout_marginTop="@dimen/base_top_9"
        android:text="@string/user_info" />

    <Button
        android:layout_width="200dp"
        android:id="@+id/bt_user_info_modify"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_top_9"
        android:text="@string/user_info_modify" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_top_9"
        android:id="@+id/bt_modify_password"
        android:text="@string/modify_password" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_top_9"
        android:id="@+id/bt_sales_info"
        android:text="@string/sales_info" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_top_9"
        android:id="@+id/bt_network"
        android:text="@string/network" />

    <Button
        android:layout_width="200dp"
        android:id="@+id/bt_cover_list"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_top_9"
        android:text="@string/cover_list" />

</LinearLayout>
